          "project_id": {
            "type": "string",
            "description": "Project ID"
          },
          "environment_id": {
            "type": "string",
            "description": "Environment ID"
          },
          "service_id": {
            "type": "string",
            "description": "Optional service ID (for service-specific variables)"
          },
          "include_values": {
            "type": "boolean",
